<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FitnessLife_SO_Mobile.ViewModels"
             x:Class="FitnessLife_SO_Mobile.Views.DietasViews.DietasPage"
             Title="Dietas">




    <ContentPage.ToolbarItems>
        <ToolbarItem  Text="Add" Icon="Add.png" Clicked="MenuItem1_Clicked" />
        <ToolbarItem  Text="Actualizar" Icon="Add.png" Clicked="MenuItem2_Clicked" />
        
    </ContentPage.ToolbarItems>
 

    <StackLayout>
        <Label Text="Tipos de Dietas" FontSize="Title" TextColor="Black"/>
        <ListView x:Name="DietasListView" SelectionMode="None">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell TextColor="ForestGreen" DetailColor="AliceBlue"
                               Text="{Binding Descripcion}"
                               Detail="{Binding IdRutina}"
                               ImageSource="icon.png">

                    </ImageCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>